<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>

    <nav class="sitenav sm:border-r navMenu" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click()">
        <FluentNavMenu Id="main-menu" Title="Main menu" Width="250" Collapsible="true" @bind-Expanded="@_expanded">
            <FluentNavLink Icon="@(new Icons.Regular.Size20.Home())" Href="/" Match="NavLinkMatch.All">
                Dashboard
            </FluentNavLink>

            <FluentNavGroup Expanded="true" Gap="10px" Icon="@(new Icons.Regular.Size16.WebAsset())">
              <TitleTemplate> Asset </TitleTemplate>
              <ChildContent>
                <FluentNavLink Href="/Asset/Asset-Details" Match="NavLinkMatch.All">Asset Details</FluentNavLink>
                <FluentNavLink Href="/Asset/Asset-List" Match="NavLinkMatch.All">Asset List</FluentNavLink>
                <FluentNavLink Href="/Asset/Asset-List-Generic" Match="NavLinkMatch.All">Asset List Generic</FluentNavLink>
              </ChildContent>
            </FluentNavGroup>

            <FluentNavGroup Expanded="true" Gap="10px" Icon="@(new Icons.Regular.Size28.CalendarWorkWeek())">
              <TitleTemplate> Work Order </TitleTemplate>
              <ChildContent>
                <FluentNavLink Href="/Work/Work-Order" Match="NavLinkMatch.All">Asset Detail</FluentNavLink>
              </ChildContent>
            </FluentNavGroup>
        </FluentNavMenu>
    </nav>
</div>

@code {

    private bool _expanded = true;

}
