@inherits LayoutComponentBase

@using EAM.Client.Shared.Components.Dashboard

<PageTitle>DJATI - Mining Management System</PageTitle>

<FluentDesignTheme OfficeColor="OfficeColor.Excel" Mode="DesignThemeModes.Light"  Direction="LocalizationDirection.LeftToRight" />
<FluentToastProvider MaxToastCount="10" ShowCloseButton="true" Position="ToastPosition.BottomRight" Timeout="800" RemoveToastsOnNavigation="true"/>
<FluentMessageBarProvider MaxMessageCount="10" NewestOnTop="true" ClearAfterNavigation="true"/>
<FluentDialogProvider/>
<FluentTooltipProvider/>

<FluentLayout>
    <FluentHeader>
        BlazorApp2
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
  An unhandled error has occurred.
  <a href="" class="reload">Reload</a>
  <a class="dismiss">🗙</a>
</div>
